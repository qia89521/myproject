@{
    Layout = "~/Views/Shared/_FormWhite.cshtml";
}
@model YiSha.Model.Result.OrderManage.Response_OrderPrintIssue;

<div class="wrapper animated fadeInRight">
    <div id="tb_print">
        <style>
            .tb_print {
                text-align: center;
                border-collapse: collapse;
                border: 1px solid #000;
                width: 710px;
                font-size: 12px;
            }

                .tb_print td {
                    border: 1px solid #000;
                    line-height: 20px;
                }

                .tb_print .remark {
                    text-align: left;
                    vertical-align: top;
                }
        </style>
        <table class="tb_print">
            <tr>
                <td colspan="8">
                    <h3>
                        @(Model.Title)
                    </h3>
                </td>
            </tr>
            <tr>
                <td>日期：</td>
                <td colspan="3">
                    @(Model.PrintDay)
                </td>
                <td>单号：</td>
                <td colspan="3">
                    @(Model.PrintOrderNumber)
                </td>
            </tr>
            <tr>
                <td>客户名称：</td>
                <td colspan="3">
                    @(Model.CustName)
                </td>
                <td>电话：</td>
                <td colspan="3">
                    @(Model.LinkPhone)
                </td>
            </tr>
            <tr>
                <td>区域：</td>
                <td colspan="3">
                </td>
                <td>传真：</td>
                <td colspan="3">
                </td>
            </tr>
            <tr>
                <td>联系人：</td>
                <td colspan="3">
                    @(Model.LinkName)
                </td>
                <td>邮箱：</td>
                <td colspan="3">
                </td>
            </tr>
            <tr>
                <td>收货地址：</td>
                <td colspan="7">
                    @(Model.ReciveAddress)
                </td>
            </tr>
            <tr>
                <td>序号</td>
                <td>产品名称</td>
                <td>产品型号</td>
                <td>规格描述</td>
                <td>单价(RMB)</td>
                <td>数量</td>
                <td>单位</td>
                <td>合计(RMB)</td>
            </tr>
            <!---循环打印产品-->
            @{ int i = 0;}
            @foreach (var obj in Model.ListProduct)
            {
                i++;
                <tr>
                    <td>@(i)</td>
                    <td>@(obj.MaterielTxt)</td>
                    <td></td>
                    <td></td>
                    <td>@(obj.SalePrice).ToString("0.00")</td>
                    <td>@(obj.SaleNum)</td>
                    <td></td>
                    <td>@(obj.TotalPrice).ToString("0.00")</td>
                </tr>
            }

            <tr>
                <td rowspan="2" colspan="6" class="remark">
                    <span>备注:</span>
                    <span>@(Model.Remark).ToString("0.00")</span>
                </td>
                <td>合计(RMB)</td>
                <td>
                    @(Model.TotalMoney).ToString("0.00")
                </td>
            </tr>
            <tr>
                <td>已付(RMB)</td>
                <td>
                    @(Model.FactMoney).ToString("0.00")
                </td>
            </tr>
            <tr>
                <td rowspan="2" colspan="6" class="remark">
                    <div>开户行:  @(Model.SysIssueConfig.SysBankName)</div>
                    <div>开户名称：@(Model.SysIssueConfig.SysBankMan) 开户账号: @(Model.SysIssueConfig.SysBankCardNo)</div>
                </td>
                <td>余款(RMB)</td>
                <td>@(Model.YuMoney)</td>
            </tr>
            <tr>
                <td>打款方式</td>
                <td>对私账户</td>
            </tr>

            <tr>
                <td colspan="2">销售员</td>
                <td>审批</td>
                <td>财务审批</td>
                <td>生产人</td>
                <td colspan="2">发货人</td>
                <td>发货日期</td>
            </tr>
            <tr>
                <td colspan="2">&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td colspan="2">&nbsp;</td>
                <td>&nbsp;</td>
            </tr>

        </table>
    </div>
</div>

<script type="text/javascript">

    function saveForm(index) {
        $("#tb_print").printArea();
        window.setTimeout(function () {
            parent.layer.close(index);

        }, 1000 * 6);

    }
</script>

